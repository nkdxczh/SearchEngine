{
    "query": {
        "match_phrase": {
            "_index": "lines"
            "Year" : "2008"
        }
    }
};
'

curl -XGET 'localhost:9200/lines/_search?pretty' -H 'Content-Type: application/json' -d'
{
    "query": {
        "indices" : {
            "query" : { "Year" : "2008" }
        }
    }
}
'

