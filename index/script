{
 "mappings" : {
  "_default_" : {
   "properties" : {
    "title" : {"type": "string" },
    "column" : { 
      "name" : {"type": "string" }
    },
    "content" : {"type": "string" }
   }
  }
 }
}
';


curl -XPUT localhost:9200/_bulk --data-binary @raw.json

curl -XGET 'localhost:9200/raw?pretty'


query:
