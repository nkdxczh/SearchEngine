curl -XGET 'localhost:9200/_search?pretty' -H 'Content-Type: application/json' -d'
{
    "query": {
        "indices" :  ["line","lines"],
        "query" : {
            "Year" : "2008"
        }
    }
}
'

curl 'localhost:9200/_cat/indices?v'

